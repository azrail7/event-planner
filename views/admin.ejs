    <% events.forEach( function (event) { %>
      <form class="form-events" action="/delete" method="POST">

        <div class="card  border-primary rounded-top col-lg-3">

          <div class="card-body">
            <h3 class="card-title"><%= event.title %></h3>
            <label>Description</label>
            <p class="card-text"><%= event.description.substr(0,100) + "..."; %></p>
            <a href="/update/<%= event.title %>" class="btn btn-primary">Update</a>
            <button name="deleteBtn" value="<%=event._id%>" type="submit" class="btn btn-danger">Delete</button>
          </div>
        </div>

        <% }); %>
      </form>
  </div>

