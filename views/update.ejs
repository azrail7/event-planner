    <br>
    <h1 style="text-align: center;">Update</h1>
    <br>

    <div class="w-50 p-3" style="width: 800px; margin: 0 auto;">

      <form action="/update" method="POST">

        <div class="form-group">
          <label>Edit title:</label>
          <input type="text" value="<%= title %>" class="form-control" name="new_title">
        </div>

        <div class="form-group">
          <label>Edit description:</label>
          <textarea name="new_desc" class="form-control" rows="10" cols="20"> <%= description %> </textarea>
        </div>

        <div class="form-group">
          <label>Edit date: (or insert the same: <%= date.toString().substr(4, 11); %>)</label>
          <input type="date" class="form-control" name="new_date">
        </div>

        <div class="form-group">
          <label>Edit capacity:</label>
          <input type="number" value="<%= capacity %>" class="form-control" name="new_cap">
        </div>

        <div class="form-group">
          <label>Edit price:</label>
          <input type="number" value="<%= price %>" class="form-control" name="new_price">
        </div>

        <button name="updateBtn" value="<%= id %>" type="submit" class="btn btn-success">Save</button>

      </form>
    </div>



