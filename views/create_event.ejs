    <h1 style="text-align: center;">Create New Event</h1>
    <br>


    <div class="w-50 p-3" style="width: 800px; margin: 0 auto;">

      <form action="/create_event" method="POST">

        <div class="form-group">
          <label>Event title:</label>
          <input type="text" class="form-control" name="ev_title" required="required">
        </div>

        <div class="form-group">
          <label>Description:</label>
          <textarea name="ev_desc" class="form-control" rows="10" cols="20" required="required">
          </textarea>
        </div>

        <div class="form-group">
          <label>Date:</label>
          <input type="date" class="form-control" name="ev_date" required="required">
        </div>

        <div class="form-group">
          <label>Capacity:</label>
          <input type="number" class="form-control" name="ev_cap" required="required">
        </div>

        <div class="form-group">
          <label>Price:</label>
          <input type="number" class="form-control" name="ev_price" required="required">
        </div>

        <button type="submit" class="btn btn-success">Create</button>

      </form>
