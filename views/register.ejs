<%- include ("partials/header") -%>

  <!-- Title for this page -->
  <title>Register</title>

  <!-- Login Page Style CSS -->
  <link rel="stylesheet" href="css/register_style.css" media="all" type="text/css">
</head>

<body>

  <!-- Registration Form Bootstrap -->
  <div class="container">

    <div class="row" id="main">
        <div class="col-md-4 offset-md-4 form-div">



            <form action="/register" id="form-register" method="POST">
                <h1 class="text-center">Register</h1>
                  <div class="form-group">
                      <br>
                      <input type="text" name="username"
                      class="form-control form-control-lg"
                      placeholder="Enter your Email" required="required"/>
                  </div>
                  <div class="form-group">
                      <br>
                      <input type="password" name="password"
                      class="form-control form-control-lg"
                      placeholder="Enter your Password" required="required"/>
                  </div>
                  <div class="form-group">
                      <br>
                      <input type="password" name="pwdrepeat"
                      class="form-control form-control-lg"
                      placeholder="Confirm your Password" required="required"/>
                  </div>
                  <div class="form-group">
                      <button type="submit" name="submit" form="form-register"
                      class="btn btn-primary btn-block">Sign Up</button>
                  </div>
                  <p class="text-center">
                     Already a Member?
                     <a href="/">Sign in</a>
                  </p>
                  <br>

                  <% if (msg == "Success") { %>
                    <div class="alert alert-success">
                      <strong><%= msg %>,</strong>
                      now you can <a href="/" class="alert-link">sign in!</a>
                    </div>
                  <% } else if (msg == "Error") {%>
                    <div class="alert alert-danger">
                      <strong><%= msg %>,</strong> please try again!
                    </div>
                  <% } %>

                  <br><br><br>

                  <a class="btn btn-block" href="/auth/google" role="button">
                    <i class="fab fa-google"></i> Sign In with Google </a>
            </form>



        </div>
     </div>
  </div>

  <%- include ("partials/footer") -%>
