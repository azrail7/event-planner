<%- include ("partials/header"); -%>

<!-- Title for this page -->
<title>Log In</title>

<!-- Login Page Style CSS -->
<link rel="stylesheet" href="css/home_style.css">


</head>

<body>
  <div class="container">

    <div class="row no-gutters" id="main">

      <div class="col-md-6 no-gutters left">

        <div class="left-text">
          <h1>Do you wanna book a seminar?</h1>
          <h4>Here is your place!</h4>
          <p></p>
          <p></p>
        </div>

      </div>

      <div class="col-md-6 no-gutters right">

        <form action="/" method="post">

          <div class="login-title">
            <h1>Sign In</h1>
            <br>
          </div>

          <div class="form-group">
            <input type="email" name="username" class="form-control" id="login-username" placeholder="Email...">
          </div>

          <div class="form-group">
            <input type="password" name="password" class="form-control" id="login-password" placeholder="Password...">
          </div>

          <button type="submit" class="btn login-button">Log In</button>

          <a class="btn register-button" href="/register" role="button">Register</a>
          <br><br>

          <a class="btn google-button" href="/auth/google" role="button">
            <i class="fab fa-google"></i> Log In with Google </a>
        </form>
      </div>
    </div>
  </div>

    <%- include ("partials/footer"); -%>
